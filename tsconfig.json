{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "~/src/*": ["./src/*"],
      "~/entity/*": ["./src/graphql/entity/*"],
      "~/types/*": ["./src/@types/*"],
      "~/graphql/*": ["./src/graphql/*"],
      "~/utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
