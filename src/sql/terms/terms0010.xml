<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="terms.terms0010">
	
  <!-- 약관 제목 목록 조회 -->
		<sql id="selectAgreementList">
			<![CDATA[
				/*Terms selectAgreementList*/
					BEGIN
						FOODBIZ.PKG_TERMS.TERMS_INFO_GET_BY_APPLY(
							:in_serviceDiv
							,:out_termsList
							,:out_retCode
							,:out_retMsg
						);
			END;
			]]>
		</sql>

  <!-- 약관동의처리 조회 -->
		<sql id="selectAgreement">
			<![CDATA[
				/*Terms selectAgreement*/
					BEGIN
						FOODBIZ.PKG_TERMS.TERMS_AGREE_GET_CHK_INFO(
							:in_serviceDiv
							,:in_ccCode
							,:in_serviceCode
							,:in_userId
							,:out_termsAgreeList
							,:out_retCode
							,:out_retMsg
						);
			END;
			]]>
		</sql>

	<!-- 약관동의처리 조회(선 체크용) -->
		<sql id="selectAgreementFirst">
			<![CDATA[
				/*Terms selectAgreementFirst*/
					BEGIN
						FOODBIZ.SP_TERMS_AGREE_CHECK (
							:in_serviceDiv
							,:in_ccCode
							,:in_serviceCode
							,:in_userId
							,:out_termsAgreeList
							,:out_retCode
							,:out_retMsg
						);
			END;
			]]>
		</sql>	
  
  <!-- 약관동의처리 -->
		<sql id="createAgreement">
			<![CDATA[
				/*Terms createAgreement*/
					BEGIN
						FOODBIZ.PKG_TERMS.TERMS_AGREE_SET(
							:in_serviceDiv
							,:in_termsInfoNo
							,:in_ccCode
							,:in_serviceCode
							,:in_userId
							,:in_agreeYn
							,:in_etcInfo
							,:in_ipAddr
							,:in_ucode
							,:out_retCode
							,:out_retMsg
						);
			END;
			]]>
		</sql>
</mapper>